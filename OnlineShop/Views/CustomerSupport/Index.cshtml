@using OnlineShop.Data

@model IEnumerable<SupportTicket>

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Support Tickets</h2>
        <a href="@Url.Action("Create")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> New Support Ticket
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            You haven't created any support tickets yet.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Ticket ID</th>
                        <th>Subject</th>
                        <th>Created</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model)
                    {
                        <tr>
                            <td>#@ticket.Id</td>
                            <td>@ticket.Subject</td>
                            <td>@ticket.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="badge bg-@(ticket.Status switch {
                                    "Open" => "warning",
                                    "In Progress" => "info",
                                    "Closed" => "success",
                                    _ => "secondary"
                                })">@ticket.Status</span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = ticket.Id })" 
                                   class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>