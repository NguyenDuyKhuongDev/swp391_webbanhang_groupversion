@using OnlineShop.Data

@model SupportTicket

<div class="container my-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Ticket #@Model.Id: @Model.Subject</h4>
            <span class="badge bg-@(Model.Status switch {
                "Open" => "warning",
                "In Progress" => "info",
                "Closed" => "success",
                _ => "secondary"
            })">@Model.Status</span>
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h5>Description</h5>
                <p class="border rounded p-3 bg-light">@Model.Description</p>
                <small class="text-muted">Created on @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
            </div>

            <h5>Conversation</h5>
            <div class="conversation-area mb-4">
                @foreach (var reply in Model.Replies.OrderBy(r => r.CreatedAt))
                {
                    <div class="card mb-3 @(reply.UserId == Model.UserId ? "border-primary" : "border-success")">
                        <div class="card-header bg-light">
                            <strong>@(reply.UserId == Model.UserId ? "You" : "Support Staff")</strong>
                            <small class="text-muted float-end">@reply.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@reply.Message</p>
                        </div>
                    </div>
                }
            </div>

            @if (Model.Status != "Closed")
            {
                <form asp-action="Reply" method="post">
                    <input type="hidden" name="ticketId" value="@Model.Id" />
                    <div class="mb-3">
                        <label class="form-label">Your Reply</label>
                        <textarea name="message" class="form-control" rows="3" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send Reply</button>
                </form>
            }
        </div>
    </div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>