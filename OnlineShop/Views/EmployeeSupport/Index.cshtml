@using OnlineShop.Data

@model IEnumerable<SupportTicket>

<div class="container my-4">
    <h2>Support Tickets Management</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Statuses</option>
                        <option value="Open">Open</option>
                        <option value="In Progress">In Progress</option>
                        <option value="Closed">Closed</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Ticket ID</th>
                    <th>Customer</th>
                    <th>Subject</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Last Reply</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>#@ticket.Id</td>
                        <td>@ticket.User.Email</td>
                        <td>@ticket.Subject</td>
                        <td>@ticket.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <span class="badge bg-@(ticket.Status switch {
                                "Open" => "warning",
                                "In Progress" => "info",
                                "Closed" => "success",
                                _ => "secondary"
                            })">@ticket.Status</span>
                        </td>
                        <td>@(ticket.Replies.Any() ? ticket.Replies.OrderByDescending(r => r.CreatedAt).First().CreatedAt.ToString("dd/MM/yyyy HH:mm") : "-")</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = ticket.Id })" 
                               class="btn btn-sm btn-primary">
                                <i class="bi bi-eye"></i> View
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>