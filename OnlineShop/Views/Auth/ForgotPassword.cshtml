@using OnlineShop.Models.OnlineShop.Models
@model ForgotPasswordModel

<div class="forgot-password-container">
    <div class="forgot-password-box">
        <div class="text-center mb-4">
            <h2 class="logo-text">LOGO PAGE</h2>
        </div>

        <h3 class="forgot-title text-center mb-2">Quên mật khẩu?</h3>
        <p class="text-center text-muted mb-4">Khôi phục mật khẩu tài khoản của bạn</p>

        <div class="alert alert-info mb-4">
            Nhập email đăng ký của bạn và chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu
        </div>

        <form asp-action="ForgotPassword" method="post" class="forgot-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control rounded-pill" placeholder="Nhập địa chỉ email của bạn" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill mb-4">Gửi liên kết đặt lại</button>

            <div class="text-center">
                <p>Đã nhớ mật khẩu? <a asp-action="Login" class="login-link">Quay lại đăng nhập</a></p>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script src="~/js/passwordToggle.js" asp-append-version="true"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

