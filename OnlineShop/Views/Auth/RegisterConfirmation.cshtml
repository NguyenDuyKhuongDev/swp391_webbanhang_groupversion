@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container text-center mt-5">
    <h1>@ViewData["Title"]</h1>
    <div class="alert alert-success mt-4">
        <h4>Registration Successful!</h4>
        <p>
            We've sent a confirmation email to your email address.
            Please check your inbox and click on the confirmation link to activate your account.
        </p>
        <p>
            If you don't see the email, please check your spam folder.
        </p>
    </div>
    <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Return to Home</a>
</div>