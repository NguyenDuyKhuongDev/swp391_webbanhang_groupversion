@model OnlineShop.Models.LoginModel

<div class="login-container">
    <div class="login-box">
        <div class="text-center mb-4">
            <h2 class="logo-text">LOGO PAGE</h2>
        </div>

        <h3 class="login-title text-center mb-4">Đăng nhập</h3>

        <form asp-action="Login" method="post" class="login-form">
            <div class="form-group mb-4">
                <label asp-for="Username" class="form-label"></label> 
                <input asp-for="Username" class="form-control rounded-pill" placeholder="Nhập tên đăng nhập hoặc email" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label"></label> 
                <div class="password-input-group position-relative">
                    <input asp-for="Password" class="form-control rounded-pill" type="password" placeholder="Nhập mật khẩu" id="passwordField" />
                    <span class="password-toggle position-absolute" style="right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                        <i class="bi bi-eye-slash" id="togglePassword"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>
                <div>
                    <a asp-action="ForgotPassword" class="forgot-password-link">Quên mật khẩu?</a>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 rounded-pill mb-3">Đăng nhập</button>

            <div class="text-center mt-3">
                <p>Chưa có tài khoản? <a asp-action="Register" class="register-link">Đăng ký ngay</a></p>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

@section Scripts {
    <script src="~/js/passwordToggle.js" asp-append-version="true"></script>
}