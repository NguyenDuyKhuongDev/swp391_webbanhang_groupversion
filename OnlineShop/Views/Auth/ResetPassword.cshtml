@model ResetPasswordModel

<div class="reset-password-container">
    <div class="reset-password-box">
        <div class="text-center mb-4">
            <h2 class="logo-text">LOGO PAGE</h2>
        </div>

        <h3 class="reset-title text-center mb-2">Đặt lại mật khẩu</h3>
        <p class="text-center text-muted mb-4">Tạo mật khẩu mới cho tài khoản của bạn</p>

        <div class="alert alert-info mb-4">
            Vui lòng nhập mật khẩu mới cho tài khoản của bạn
        </div>

        <form asp-action="ResetPassword" method="post" class="reset-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Email" type="hidden" />
            <input asp-for="Token" type="hidden" />

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <div class="password-input-group position-relative">
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Nhập mật khẩu mới" />
                    <span class="password-toggle position-absolute" style="right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <div class="password-input-group position-relative">
                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Nhập lại mật khẩu mới" />
                    <span class="password-toggle position-absolute" style="right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary w-100 rounded-pill mb-3">Đặt lại mật khẩu</button>

            <div class="text-center mt-3">
                <a asp-action="Login" class="login-link">Quay lại trang đăng nhập</a>
            </div>
        </form>
    </div>
</div>
@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}
@section Scripts {
    <script src="~/js/passwordToggle.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
}


