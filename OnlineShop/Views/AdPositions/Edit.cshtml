@model OnlineShop.Models.AdPosition

@{
    ViewData["Title"] = "Chỉnh sửa Vị trí Quảng cáo";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="fas fa-map-marker-alt text-primary me-2"></i>@ViewData["Title"]
        </h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-edit text-secondary me-2"></i>Thông tin vị trí
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Position" class="form-label fw-bold">
                            <i class="fas fa-sort-numeric-down me-2 text-muted"></i>Vị trí
                        </label>
                        <input asp-for="Position" class="form-control" placeholder="Nhập số thứ tự vị trí" />
                        <span asp-validation-for="Position" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold">
                            <i class="fas fa-heading me-2 text-muted"></i>Tên vị trí
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Nhập tên vị trí" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label fw-bold">
                            <i class="fas fa-align-left me-2 text-muted"></i>Mô tả
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả vị trí"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Width" class="form-label fw-bold">
                            <i class="fas fa-ruler-horizontal me-2 text-muted"></i>Chiều rộng (px)
                        </label>
                        <input asp-for="Width" class="form-control" placeholder="Nhập chiều rộng" />
                        <span asp-validation-for="Width" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Height" class="form-label fw-bold">
                            <i class="fas fa-ruler-vertical me-2 text-muted"></i>Chiều cao (px)
                        </label>
                        <input asp-for="Height" class="form-control" placeholder="Nhập chiều cao" />
                        <span asp-validation-for="Height" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                            <label asp-for="IsActive" class="form-check-label fw-bold">
                                <i class="fas fa-power-off me-2 text-muted"></i>Kích hoạt
                            </label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-12 mt-4">
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary px-4">
                            <i class="fas fa-save me-2"></i>Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Hủy bỏ
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            box-shadow: 0 0.15rem 1.75rem 0 rgba(33, 40, 50, 0.1);
            border-radius: 0.35rem;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
            padding: 1rem 1.35rem;
            border-radius: 0.35rem 0.35rem 0 0 !important;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
        }

        .form-control, .form-select {
            border-radius: 0.25rem;
            padding: 0.375rem 0.75rem;
        }

        .form-check-input:checked {
            background-color: #4361ee;
            border-color: #4361ee;
        }

        .form-switch .form-check-input {
            width: 3em;
            height: 1.5em;
        }

        .text-danger.small {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}