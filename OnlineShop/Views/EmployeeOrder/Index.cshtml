@model Tuple<List<OnlineShop.Data.Order>, OnlineShop.Models.OrderFilterModel>

@{
    ViewData["Title"] = "Order Management";
    var orders = Model.Item1;
    var filter = Model.Item2;
}

<div class="container">
    <h2>Order Management</h2>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Order ID</label>
                    <input type="text" class="form-control" name="OrderId" value="@filter.OrderId" placeholder="Search by Order ID" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Customer Email/Name</label>
                    <input type="text" class="form-control" name="CustomerSearch" value="@filter.CustomerSearch" placeholder="Search by email or name" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select class="form-select" name="Status">
                        <option value="">All Orders</option>
                        <option value="Pending" selected="@(filter.Status == "Pending")">Pending</option>
                        <option value="Processing" selected="@(filter.Status == "Processing")">Processing</option>
                        <option value="Shipping" selected="@(filter.Status == "Shipping")">Shipping</option>
                        <option value="Completed" selected="@(filter.Status == "Completed")">Completed</option>
                        <option value="Cancelled" selected="@(filter.Status == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">From Date</label>
                    <input type="date" class="form-control" name="FromDate" value="@(filter.FromDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">To Date</label>
                    <input type="date" class="form-control" name="ToDate" value="@(filter.ToDate?.ToString("yyyy-MM-dd"))" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Search</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Reset</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Order ID</th>
                    <th>
                        <a href="@Url.Action("Index", new {
                            OrderId = filter.OrderId,
                            CustomerSearch = filter.CustomerSearch,
                            FromDate = filter.FromDate?.ToString("yyyy-MM-dd"),
                            ToDate = filter.ToDate?.ToString("yyyy-MM-dd"),
                            Status = filter.Status,
                            SortColumn = "date",
                            SortOrder = filter.SortColumn == "date" && filter.SortOrder == "asc" ? "desc" : "asc"
                        })" class="text-white text-decoration-none">
                            Date
                            @if (filter.SortColumn == "date")
                            {
                                <i class="bi bi-arrow-@(filter.SortOrder == "asc" ? "up" : "down")"></i>
                            }
                        </a>
                    </th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>
                        <a href="@Url.Action("Index", new {
                            OrderId = filter.OrderId,
                            CustomerSearch = filter.CustomerSearch,
                            FromDate = filter.FromDate?.ToString("yyyy-MM-dd"),
                            ToDate = filter.ToDate?.ToString("yyyy-MM-dd"),
                            Status = filter.Status,
                            SortColumn = "total",
                            SortOrder = filter.SortColumn == "total" && filter.SortOrder == "asc" ? "desc" : "asc"
                        })" class="text-white text-decoration-none">
                            Total Amount
                            @if (filter.SortColumn == "total")
                            {
                                <i class="bi bi-arrow-@(filter.SortOrder == "asc" ? "up" : "down")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new {
                            OrderId = filter.OrderId,
                            CustomerSearch = filter.CustomerSearch,
                            FromDate = filter.FromDate?.ToString("yyyy-MM-dd"),
                            ToDate = filter.ToDate?.ToString("yyyy-MM-dd"),
                            Status = filter.Status,
                            SortColumn = "status",
                            SortOrder = filter.SortColumn == "status" && filter.SortOrder == "asc" ? "desc" : "asc"
                        })" class="text-white text-decoration-none">
                            Status
                            @if (filter.SortColumn == "status")
                            {
                                <i class="bi bi-arrow-@(filter.SortOrder == "asc" ? "up" : "down")"></i>
                            }
                        </a>
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in orders)
                {
                    <tr>
                        <td>@order.OrderId</td>
                        <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@order.User.UserName</td>
                        <td>@order.User.Email</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <span class="badge bg-@(order.Status switch {
                                "Pending" => "warning",
                                "Processing" => "info",
                                "Shipping" => "primary",
                                "Completed" => "success",
                                "Cancelled" => "danger",
                                _ => "secondary"
                            })">@order.Status</span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a href="@Url.Action("Details", new { id = order.Id })" class="btn btn-sm btn-info">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form asp-action="UpdateStatus" method="post">
                                            <input type="hidden" name="id" value="@order.Id" />
                                            <button type="submit" name="status" value="Processing" class="dropdown-item">Mark Processing</button>
                                            <button type="submit" name="status" value="Shipping" class="dropdown-item">Mark Shipping</button>
                                            <button type="submit" name="status" value="Completed" class="dropdown-item">Mark Completed</button>
                                            <button type="button" class="dropdown-item text-danger" 
                                                    onclick="showCancelModal(@order.Id)">
                                                Mark Cancelled
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (filter.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= filter.TotalPages; i++)
                {
                    <li class="page-item @(i == filter.PageNumber ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { 
                            PageNumber = i, 
                            PageSize = filter.PageSize,
                            OrderId = filter.OrderId,
                            CustomerSearch = filter.CustomerSearch,
                            FromDate = filter.FromDate?.ToString("yyyy-MM-dd"),
                            ToDate = filter.ToDate?.ToString("yyyy-MM-dd"),
                            Status = filter.Status,
                            SortColumn = filter.SortColumn,
                            SortOrder = filter.SortOrder
                        })">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

<!-- Add this at the bottom of the container div, before the closing </div> -->
<!-- Cancel Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cancel Order</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="UpdateStatus" method="post">
                <div class="modal-body">
                    <input type="hidden" id="cancelOrderId" name="id" />
                    <input type="hidden" name="status" value="Cancelled" />
                    <div class="mb-3">
                        <label class="form-label">Cancellation Reason</label>
                        <textarea class="form-control" name="cancellationReason" 
                                rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Cancel Order</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showCancelModal(orderId) {
            document.getElementById('cancelOrderId').value = orderId;
            var modal = new bootstrap.Modal(document.getElementById('cancelModal'));
            modal.show();
        }
    </script>
}

