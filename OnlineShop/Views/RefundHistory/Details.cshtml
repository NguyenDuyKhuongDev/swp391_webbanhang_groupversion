@model RefundHistory

@{
    ViewData["Title"] = "Chi tiết hoàn tiền";
}

<div class="container my-4">
    <h2>Chi tiết hoàn tiền #@Model.RefundId</h2>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6 class="text-muted">Thông tin hoàn tiền</h6>
                    <p><strong>Mã đơn hàng:</strong> @Model.OrderId</p>
                    <p><strong>Số tiền:</strong> @Model.RefundAmount.ToString("C")</p>
                    <p><strong>Ngày yêu cầu:</strong> @Model.RefundDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Trạng thái:</strong> 
                        <span class="badge bg-@(Model.RefundStatus switch {
                            "Pending" => "warning",
                            "Approved" => "success",
                            "Rejected" => "danger",
                            _ => "secondary"
                        })">@Model.RefundStatus</span>
                    </p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted">Thông tin bổ sung</h6>
                    <p><strong>Lý do:</strong> @Model.Reason</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>