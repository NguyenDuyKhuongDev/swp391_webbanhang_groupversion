            }

            .blog-content h2,
            .blog-content h3,
            .blog-content h4 {
                margin-top: 2rem;
                margin-bottom: 1rem;
                font-weight: 600;
            }

            .blog-content ul,
            .blog-content ol {
                padding-left: 2rem;
                margin-bottom: 1.5rem;
            }

            .blog-content blockquote {
                border-left: 4px solid #0d6efd;
                padding-left: 1.5rem;
                margin: 1.5rem 0;
                font-style: italic;
                color: #6c757d;
            }

        .hover-effect {
            transition: all 0.3s ease;
            border-radius: 0.5rem;
        }

