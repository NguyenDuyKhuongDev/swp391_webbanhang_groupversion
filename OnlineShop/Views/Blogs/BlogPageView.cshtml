@model OnlineShop.Models.Blog
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = Model.Title;
    ViewData["MetaDescription"] = Model.MetaDescription;
    ViewData["MetaKeywords"] = Model.MetaTitle;
    var tags = ViewBag.BlogTags as List<string>;
    var BlogAds = ViewBag.BlogAds as List<OnlineShop.Models.Advertisement>;
}

<!-- Blog Header Section -->
<section class="bg-light py-4 mb-5">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb bg-transparent mb-0">
                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                <li class="breadcrumb-item"><a href="/IndexCommonBlogs">Blog</a></li>
                <li class="breadcrumb-item"><a href="/blog/category/@Model.Slug">@Model.Category?.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>
</section>

<!-- Main Blog Content -->
<article class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Blog Header -->
            <header class="mb-5">
                <div class="d-flex align-items-center mb-4">
                    <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill px-3 py-2 me-3">
                        <i class="fas fa-folder me-1"></i> @Model.Category?.Name
                    </span>
                    <small class="text-muted">
                        <i class="far fa-clock me-1"></i> @Model.PublishedDate?.ToString("dd/MM/yyyy HH:mm")
                    </small>
                </div>

                <h1 class="display-4 fw-bold mb-3">@Model.Title</h1>

                <div class="d-flex align-items-center mb-4">
                    <div class="avatar bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="fas fa-user text-primary fs-4"></i>
                    </div>
                    <div>
                        <div class="fw-bold">@Model.AuthorId</div>
                        <div class="text-muted small">
                            <span class="me-3">
                                <i class="fas fa-eye me-1"></i> @(Model.ViewCount ?? 0)
                            </span>
                            <span class="me-3">
                                <i class="fas fa-heart me-1"></i> @(Model.LikeCount ?? 0)
                            </span>
                            <span>
                                <i class="fas fa-comment me-1"></i> @(Model.CommentCount ?? 0)
                            </span>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Featured Image -->
            <figure class="mb-5">
                @if (!string.IsNullOrEmpty(Model.Thumbnail?.ThumnailUrl))
                {
                    <img src="@Model.Thumbnail.ThumnailUrl"
                         class="img-fluid rounded-4 w-100 shadow"
                         alt="@Model.Thumbnail.ThumbnailName"
                         style="max-height: 500px; object-fit: cover;">
                }
                <figcaption class="text-center mt-2 text-muted small">@Model.Thumbnail?.ThumbnailName</figcaption>
            </figure>

            <!-- Blog Content -->
            <div class="blog-content fs-5 lh-base mb-5">
                @Html.Raw(Model.Content)
            </div>

            <!-- Blog Footer with Like and Stats -->
            <div class="d-flex justify-content-between align-items-center border-top border-bottom py-4 mb-5">
                <!-- Like Button -->
                <div>
                    <button id="likeButton" class="btn btn-like">
                        <i class="far fa-heart me-1"></i>
                        <span class="like-text">Thích bài viết</span>
                        <span class="like-count">(@(Model.LikeCount ?? 0))</span>
                    </button>
                </div>

                <!-- Stats -->
                <div class="d-flex align-items-center gap-4">
                    <div class="text-muted">
                        <i class="fas fa-eye me-1"></i> @(Model.ViewCount ?? 0) lượt xem
                    </div>
                    <div class="text-muted">
                        <i class="fas fa-comment me-1"></i> @(Model.CommentCount ?? 0) bình luận
                    </div>
                </div>
            </div>

            <!-- Tags -->
            <div class="mb-5">
                <h5 class="fw-bold mb-3">Tags:</h5>
                <div class="d-flex flex-wrap gap-2">
                @if(tags!=null &&tags.Count >0) {
                    foreach (var tag in ViewBag.BlogTags)
                    {
                        <a href="#" class="btn btn-sm btn-outline-secondary rounded-pill px-3">#@tag</a>
                    }
                 }
                </div>
            </div>

            <!-- Social Sharing -->
            <div class="d-flex align-items-center gap-3 mb-5">
                <span class="fw-bold me-2">Chia sẻ:</span>
                <a href="#" class="btn btn-sm btn-outline-primary rounded-circle" title="Facebook"
                   data-url="@Url.Action("Details", "Blogs", new { id = Model.Id }, Context.Request.Scheme)">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="#" class="btn btn-sm btn-outline-primary rounded-circle" title="Twitter"
                   data-url="@Url.Action("Details", "Blogs", new { id = Model.Id }, Context.Request.Scheme)">
                    <i class="fab fa-twitter"></i>
                </a>
                <a href="#" class="btn btn-sm btn-outline-primary rounded-circle" title="LinkedIn"
                   data-url="@Url.Action("Details", "Blogs", new { id = Model.Id }, Context.Request.Scheme)">
                    <i class="fab fa-linkedin-in"></i>
                </a>
                <a href="#" class="btn btn-sm btn-outline-primary rounded-circle" title="Copy link"
                   data-url="@Url.Action("Details", "Blogs", new { id = Model.Id }, Context.Request.Scheme)">
                    <i class="fas fa-link"></i>
                </a>
            </div>


            <!-- Author Bio -->
            <div class="card border-0 bg-light p-4 mb-5 rounded-4">
                <div class="row align-items-center">
                    <div class="col-md-2 text-center mb-3 mb-md-0">
                        <div class="avatar bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 80px; height: 80px;">
                            <i class="fas fa-user text-primary fs-3"></i>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <h5 class="fw-bold mb-2">Về tác giả</h5>
                        <p class="mb-0">@Model.AuthorId</p>
                    </div>
                </div>
            </div>

            <!-- Comments Section -->
            <div class="mb-5">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-bold mb-0">
                        <i class="far fa-comments me-2"></i> @Model.CommentCount bình luận
                    </h3>
                    <button class="btn btn-sm btn-outline-primary" id="toggleCommentForm">
                        <i class="far fa-edit me-1"></i> Viết bình luận
                    </button>
                </div>

                <!-- Comment Form (Initially Hidden) -->
                <div class="card border-0 shadow-sm p-4 mb-4 rounded-4" id="commentForm" style="display: none;">
                    <h5 class="fw-bold mb-3">Để lại bình luận</h5>
                    <form>
                        <div class="mb-3">
                            <textarea class="form-control" rows="3" placeholder="Viết bình luận của bạn..."></textarea>
                        </div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" class="form-control" placeholder="Tên của bạn">
                            </div>
                            <div class="col-md-6">
                                <input type="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary px-4">
                                    <i class="far fa-paper-plane me-2"></i> Gửi bình luận
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Comments List -->
                <div class="comments-list">
                    <!-- Sample Comment 1 -->
                    <div class="card border-0 shadow-sm p-4 mb-3 rounded-4">
                        <div class="d-flex mb-3">
                            <div class="avatar bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-user text-primary"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Nguyễn Văn A</h6>
                                <small class="text-muted">2 ngày trước</small>
                            </div>
                        </div>
                        <p class="mb-0">Bài viết rất hữu ích, cảm ơn tác giả đã chia sẻ những thông tin chi tiết như vậy!</p>
                    </div>

                    <!-- Sample Comment 2 -->
                    <div class="card border-0 shadow-sm p-4 mb-3 rounded-4">
                        <div class="d-flex mb-3">
                            <div class="avatar bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-user text-primary"></i>
                            </div>
                            <div>
                                <h6 class="fw-bold mb-1">Trần Thị B</h6>
                                <small class="text-muted">1 tuần trước</small>
                            </div>
                        </div>
                        <p class="mb-0">Mình đã áp dụng theo hướng dẫn và thấy hiệu quả rõ rệt. Mong tác giả ra thêm nhiều bài viết như này!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>

<!-- Related Posts -->
