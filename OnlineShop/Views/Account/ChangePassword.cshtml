@model OnlineShop.Models.ChangePasswordModel

<div class="change-password-container">
    <div class="change-password-box">
        <div class="text-center mb-4">
            <h2 class="logo-text">LOGO PAGE</h2>
        </div>

        <h3 class="change-title text-center mb-2">Thay đổi mật khẩu</h3>
        <p class="text-center text-muted mb-4">Cập nhật mật khẩu cho tài khoản của bạn</p>

        @if (TempData["StatusMessage"] != null)
        {
            <div id="statusMessage" class="alert alert-success mb-4">
                @TempData["StatusMessage"]
                <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="ChangePassword" method="post" class="change-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label required">Mật khẩu hiện tại</label>
                <div class="password-input-group position-relative">
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Nhập mật khẩu hiện tại" autocomplete="current-password">
                    <span class="password-toggle position-absolute" style="right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="form-label required">Mật khẩu mới</label>
                <div class="password-input-group position-relative">
                    <input asp-for="NewPassword" type="password" class="form-control rounded-pill" placeholder="Nhập mật khẩu mới" autocomplete="new-password">
                    <span class="password-toggle position-absolute" style="right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
                <small class="text-muted">
                    Mật khẩu phải có ít nhất 8 ký tự và bao gồm ít nhất một chữ hoa,
                    một chữ thường, một chữ số và một ký tự đặc biệt.
                </small>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label required">Xác nhận mật khẩu mới</label>
                <div class="password-input-group position-relative">
                    <input asp-for="ConfirmPassword" type="password" class="form-control rounded-pill" placeholder="Nhập lại mật khẩu mới" autocomplete="new-password">
                    <span class="password-toggle position-absolute" style="right: 15px; top: 50%; transform: translateY(-50%); cursor: pointer;">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary w-100 rounded-pill mb-3">Thay đổi mật khẩu</button>
                <div class="text-center">
                    <a asp-action="Index" class="back-link">Quay lại thông tin cá nhân</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

@section Scripts {
    <script src="~/js/passwordToggle.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/messageAutoHide.js" asp-append-version="true"></script>
}